@model IEnumerable<Student>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <br />
    <br />
    <div>
        <h1 class="font-weight-bolder text-center">The Family Details</h1>
    </div>
    <br />
    <div class="container">
        <table class="table table-hover  table-bordered border-primary text-center">
            <thead style="color:blue;">
                <tr>
                    <th>id</th>
                    <th>first name</th>
                    <th>last name</th>
                    <th>Age</th>
                    <th>Operations</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FName</td>
                    <td>@item.LName</td>
                    <td>@item.Age</td>
                    <td><a class="btn btn-secondary" href="/student/details/@item.Id">Details</a>
                    <a class="btn btn-primary" href="/student/Edit/@item.Id">Update</a>
                    <a class="btn btn-danger" href="/student/delete/@item.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <a href="/student/Create" class="btn btn-secondary" >Add New Member</a>
    </div>
    
</body>
</html>
