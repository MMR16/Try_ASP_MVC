@model IEnumerable<Student>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <br />
    <br />
    <div>
        <h1 class="font-weight-bolder text-center">The Family Details</h1>
    </div>
    <br />
    <div class="container">
        <table class="table table-hover  table-bordered border-primary text-center">
            <thead style="color:blue;">
                <tr>
                    <th>id</th>
                    <th>first name</th>
                    <th>last name</th>
                    <th>Age</th>
                    <th>Operations</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FName</td>
                        <td>@item.LName</td>
                        <td>@item.Age</td>
                        <td>
                            @Html.ActionLink("Details","Details","Student",new {id=item.Id },new {@class="btn btn-secondary" })
                            @*<a class="btn btn-secondary" href="/student/details/@item.Id">Details</a>*@
                            @Html.ActionLink("Update","Edit","Student",new {Id=item.Id},new {@class="btn btn-primary"})
                            @*<a class="btn btn-primary" href="/student/Edit/@item.Id">Update</a>*@
                            @Html.ActionLink("Delete","Delete","Student",new {id=item.Id},new {@class="btn btn-danger"})
                            @*<a class="btn btn-danger" href="/student/delete/@item.Id">Delete</a>*@
                            @* <a class="btn btn-danger" href="/student/delete/@item.Id" onclick="return confirm(`Are You Sure`)">Delete</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>



        @Html.ActionLink("Add New Member", "Create", "Student",null, new
   {
       @class = "btn btn-secondary",
       target = "_blank", //open link in new tab
       onclick = "return confirm(`Are You Sure`)" //java script
   })

        @*<a href="/student/Create" class="btn btn-secondary" >Add New Member</a>*@
    </div>

</body>
</html>
